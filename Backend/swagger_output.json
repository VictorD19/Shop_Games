{
  "swagger": "2.0",
  "info": {
    "title": "Shop Game Api",
    "description": "Api da loja de shop game",
    "version": "1.0.0"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authorization"
    }
  },
  "paths": {
    "/allgames": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Obtem todos os games ou eles paginados",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "string"
          },
          {
            "name": "per_page",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/game/{id}": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Retorna game por id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/news": {
      "get": {
        "tags": [
          "News"
        ],
        "description": "Retorna as utimas noticias relaciona aos games",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/categorys": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Retorna todas as categorias dos games",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/populargames": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Retorna todos os games populares",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/recommendedgames": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Retorna todos os games recomendados",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/newgames": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Retorna todos novos games",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/trending_games": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Retorna games em destaques",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/search_games/{param}": {
      "get": {
        "tags": [
          "Games"
        ],
        "description": "Busqueda de games por palabras",
        "parameters": [
          {
            "name": "param",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/newuser": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "description": "Criação de novo usuarios",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "bertramvictor61@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "K79OUIOj."
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "description": "Inicia sessão do usuario",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "bertramvictor61@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "K79OUIOj."
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/cart_details": {
      "get": {
        "tags": [
          "Cart"
        ],
        "description": "Detalhes do carinho de compras",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/add_item_cart/{idGame}": {
      "post": {
        "tags": [
          "Cart"
        ],
        "description": "Adiciona um item ao carinho de compras",
        "parameters": [
          {
            "name": "idGame",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/delete_item_cart/{idGame}": {
      "delete": {
        "tags": [
          "Cart"
        ],
        "description": "Elimina item do carrinho de compras",
        "parameters": [
          {
            "name": "idGame",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/user_details": {
      "get": {
        "tags": [
          "Usuario"
        ],
        "description": "Retorna datos del usuario",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    }
  }
}